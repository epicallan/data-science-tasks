{
  "extends": "airbnb",
  "installedESLint": true,
  "parserOptions":{
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": false,
    "amd": false,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  },
  "ecmaFeatures": {
    "modules": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "sinon": true
  },
  "rules": {
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "object-property-newline" : 0,
    "prefer-arrow-callback" : 0,
    "comma-dangle": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-alert": 0,
    "func-names": 0,
    "prefer-template": 0
  },
  "plugins": [
    "import"
  ]
}
